{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Publish",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/Dotknet.Cli/bin/Debug/net6.0/Dotknet.Cli.dll",
      "args": [
        "publish",
        "--project",
        "${workspaceFolder}/src/Dotknet.Cli",
        "--output",
        "${workspaceFolder}/output"
      ],
      "cwd": "${workspaceFolder}/src/Dotknet.Cli",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "Archive",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/Dotknet.Cli/bin/Debug/net6.0/Dotknet.Cli.dll",
      "args": [
        "append",
        "--directoryToArchive",
        "${workspaceFolder}/output",
        "--archiveOutput",
        "${workspaceFolder}/layer.tar"
      ],
      "cwd": "${workspaceFolder}/src/Dotknet.Cli",
      "console": "internalConsole",
      "stopAtEntry": false
    }
  ]
}